<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_bottom_panel"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/ll_bottom_panel"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/iv_note"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:src="@drawable/ic_main_note"
            android:background="@drawable/selector_main_change"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:layout_alignLeft="@+id/iv_listen"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/iv_listen"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_main_listen"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/iv_my"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:background="@drawable/selector_main_change"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_main_my"
            android:layout_alignRight="@+id/iv_listen"
            android:layout_height="match_parent" />

    </RelativeLayout>
</RelativeLayout>

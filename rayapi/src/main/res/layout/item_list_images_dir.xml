<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selector_dialog_text_change"
    android:layout_height="104dp">


    <ImageView
        android:id="@+id/iv_dir_url"
        android:layout_width="96dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_loading_circle"
        android:layout_height="96dp" />

    <TextView
        android:layout_toRightOf="@+id/iv_dir_url"
        android:id="@+id/tv_dir_name"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/iv_dir_url"
        android:id="@+id/tv_photo_count"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:layout_below="@+id/tv_dir_name"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:layout_height="wrap_content" />
</RelativeLayout>

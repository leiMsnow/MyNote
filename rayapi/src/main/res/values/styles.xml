<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogBottomTextStyle">
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_dialog_text_change</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/pink_dialog</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="DialogDetaultTextStyle">
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_dialog_text_change</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/pink_dialog</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogAnimationStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>
